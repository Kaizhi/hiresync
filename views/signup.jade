extends layout

block content
    .container
        .login
            h2 Welcome to Hiresync
            form.pure-form(action="/signup",method="post")
                fieldset.pure-group
                    input.pure-input-1(type='email', placeholder='Email', name="username")
                    input.pure-input-1(type='password', placeholder='Password', name="password")

                button.pure-button.pure-input-1.pure-button.primary-button(type='submit') Sign Up